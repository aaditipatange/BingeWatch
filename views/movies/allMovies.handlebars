<div class="container overflow-hidden px-2">
  <div class="center head">
    <h1>All Movies</h1>
  </div>
  <div class="row gy-5">
    <div class="col">
      <a href="/movies/addMovie">
        <button class="btn btn-danger">Add Movie</button>
      </a>
    </div>
  </div>
  <div class="row gx-5">
    <div class="col-3">
      <div class="p-3 border bg-light">
        <div class="form-group">
          <label for="sort">Sort By:</label>
          <select id="sort" class="form-control" name="sort">
            <option value="alphabetically">A to Z</option>
            <option value="rating">Rating</option>
            <option value="watchCount">Watch Count</option>
          </select>
        </div>
        <div class="form-group">
          <label for="rate">Rating:</label>
          <select id="rate" class="form-control" name="rate">
            <option value="all">All</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
        <div class="form-group">
          <label for="genres">Genres:</label>
          <select id="genres" class="form-control" name="genres">
            <option value="all">All</option>
            <option value="action">Action</option>
            <option value="comedy">Comedy</option>
            <option value="crime">Crime</option>
            <option value="drama">Drama</option>
            <option value="horror">Horror</option>
            <option value="mystery">Mystery</option>
            <option value="romance">Romance</option>
            <option value="sciFi">Science-Fiction</option>
            <option value="thriller">Thriller</option>
          </select>
        </div>
        <div class="form-group">
          <label for="service">Streaming Service:</label>
          <select id="service" class="form-control" name="service">
            <option value="all">All</option>
            <option value="netflix">Netflix</option>
            <option value="amazon">Amazon</option>
            <option value="disney">Disney+</option>
            <option value="hulu">Hulu</option>
            <option value="others">Others</option>
          </select>
        </div>
        <div class="form-group">
          <label for="release_year">Release Year:</label>
          <input type="number" class="form-control" value="2021" min="1888" max="2099" step="1" id="release_year"
            placeholder="Enter release year" name="release_year">
        </div>
      </div>
    </div>
    <div class="col">
      <div class="p-3 border bg-light">
        <!-- <ul id="showList">
          {{#each movieList}}
          <li>
            <div>
              <a href="/movies/{{_id}}" class="character-link">{{movie_name}}</a><br>
              Release Year: {{release_year}}<br>
              Streaming On: {{streaming_service.name}}<br>
              Genres: {{genre}}<br>
              Rating: {{rating}}<br>
              Views: {{views}}
            </div>
          </li>
          {{/each}}
        </ul> -->
        {{#each movieList}}
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="/{{movie_img}}" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <a href="/movies/{{_id}}">
                  <h5 class="card-title">{{movie_name}}</h5>
                </a>
                <!-- <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional
                  content. This content is a little bit longer.</p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
                <label for="release_year">Release Year: {{release_year}}</label>
                <br>
                <label for="streaming_service">Streaming On: </label>
                <a href={{streaming_service.link}}>{{streaming_service.name}}</a>
                <br>
                <label for="genre">Genres: {{genre}}</label>
                <br>
                <label for="rate">Rating: {{rating}}</label>
                <br>
                <label for="views">Views: {{views}}</label>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>