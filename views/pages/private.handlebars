<div class='container'>
	<div class='row justify-content-center'>
		<div class='col-6 mt-1'>
			<h1 class='text-center mt-3 mb-2'>{{user.name}}</h1>
			<p class='lead text-center'>{{user.email}}</p>
			<!-- <h6 class="lead text-center">({{user.date_of_birth}})</h6> -->
			<div class='user-avatar'>
				<img class='img-avatar' src='/{{user.profile_pic}}' alt='User avatar' />
			</div>
			<form
				action='/private'
				method='post'
				id='userEdit-form'
				class='mt-4 mb-2'
			>
				<div class='form-group'>
					<label for='name'>Name</label>
					<input
						type='text'
						class='form-control'
						id='name'
						name='name'
						value='{{user.name}}'
					/>
				</div>

				<div class='form-group'>
					<label for='newpass'>Old Password</label>
					<input
						type='password'
						class='form-control'
						id='newpass'
						placeholder='Enter your old password'
						name='password'
					/>
				</div>
				<div class='form-group'>
					<label for='password'>New Password</label>
					<input
						type='password'
						class='form-control'
						id='password'
						name='newpass'
						placeholder='Enter your new password'
					/>
				</div>

				<button type='submit' class='btn btn-danger'>Update Account Details</button>
			</form>
		</div>
	</div>
</div>